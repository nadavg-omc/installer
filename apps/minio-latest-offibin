#!/bin/bash

if [ -f "include/startup.sh" ]; then
    . include/startup.sh
elif [ -f "../include/startup.sh" ]; then
    . ../include/startup.sh
fi

rootDir=$(rootDir)
certsLocation=/etc/minio/certs

echo "Adding Minio user" | log
useradd --system minio-user --shell /sbin/nologin

echo "Download Minio Binary" | log
cd $rootDir/temp
curlDownload https://dl.minio.io/server/minio/release/linux-amd64/minio

echo "Install minio binary" | log
mv $rootDir/temp/minio /usr/local/bin
chmod +x /usr/local/bin/minio
chown minio-user:minio-user /usr/local/bin/minio

echo "Creating Configs" | log
mkdir /minio
mkdir /etc/minio
chown minio-user:minio-user /minio
chown minio-user:minio-user /etc/minio
echo "MINIO_VOLUMES=\"/minio/\"" >> /etc/default/minio
ips=$(getServerIPAll)
echo "MINIO_PUBLIC_IPS=${ips// /,}" >> /etc/default/minio
echo "MINIO_OPTS=\"-C /etc/minio --certs-dir $certsLocation --address :443\"" >> /etc/default/minio
setcap 'cap_net_bind_service=+ep' /usr/local/bin/minio

echo "Adding Systemd Service" | log
curlDownload https://raw.githubusercontent.com/minio/minio-service/master/linux-systemd/minio.service
mv minio.service /etc/systemd/system

echo "Generating self-signed certificate" | log
mkdir -p $certsLocation/
openssl req -x509 -sha256 -newkey rsa:2048 -keyout $certsLocation/private.key -out $certsLocation/public.crt -days 1024 -nodes -subj '/CN=localhost'
chown -R minio-user:minio-user $certsLocation

echo "Starting Minio service" | log
systemctl enable minio
systemctl start minio
waitOrStop 0
sleep 5

echo "Adding descriptions" | log
apt install jq -y
access_key=$(cat /minio/.minio.sys/config/config.json | jq '.credentials._[]|select(.key|test("access_key")).value' | tr -d '"')
secret_key=$(cat /minio/.minio.sys/config/config.json | jq '.credentials._[]|select(.key|test("secret_key")).value' | tr -d '"')

descriptionAppend "Minio Web UI: https://${CWM_SERVERIP}"
descriptionAppend "Minio Access key: $access_key"
descriptionAppend "Minio Secret key: $secret_key"
descriptionAppend " "

tagScript success

exit 0
